/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
  z-index: 500;
  overflow: hidden;
} 
.page_bg{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}
.page_bg image{
  width: 100%;
  display: block;
}

.page_content{
  width: 100%;
  z-index: 500;
}