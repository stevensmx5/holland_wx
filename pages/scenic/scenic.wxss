page{
  background-color: #111113;
}
image{
  display: block
}
.secnic_bg{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.secnic_bg image{
  width: 100%;
  display: block;
}
.scenic_content{
  width: 100%;
  z-index: 500;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
}
.scenic_content .scenic_type_box{
  width: 100%;
  float: left;
  box-sizing: border-box;
  padding: 0px 30px;
}
.scenic_content .scenic_type_box .scenic_type{
  float: left;
  font-size: 12px;
  color: #fff;
  background-color: #fa2a00;
  line-height: 24px;
  border-radius: 5px;
  padding: 0px 25px;
}
.scenic_content .scenic_type_box image{
  width: 14px;
  height: 14px;
  float: left;
  margin: 5px 15px;
}
.scenic_content .scenic_type_box .name_ch,
.scenic_content .scenic_type_box .name_en{
  width: 100%;
  float: left;
  color: #fff;
}
.scenic_content .scenic_type_box .content_text{
  width: 100%;
  height: 56px;
  float: left;
  font-size: 10px;
  line-height: 14px;
  color: #fff;
  margin: 20px 0px;
}
.scenic_content .scenic_type_box .name_ch{
  font-size: 26px;
  line-height: 28px;
  margin-top: 15px;
}
.scenic_content .scenic_type_box .name_en{
  font-size: 16px;
  line-height: 20px;
}
.scenic_content .quick_toolbar_box{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  float: left;
  flex-wrap: wrap;
  margin-top: 15px;
}
.scenic_content .quick_toolbar_box .quick_toolbar{
  width: 33.33%;
  box-sizing: border-box;
  margin-bottom: 15px;
}
