.scenic_content .quick_toolbar_box .quick_toolbar .quick_toolbar_btn{
  width: 100%;
  font-size: 12px;
  color: #fff;
  background-color: transparent;
  line-height: 30px;
  border-radius: 15px;
  border: 0;
  text-align: center;
}
.scenic_content .recommend_scenic_box{
  width: 100%;
  float: left;
  white-space:nowrap;
  border-bottom: 1px solid rgba(255,255,255,0.27);
  border-top: 1px solid rgba(255,255,255,0.27);
}
.scenic_content .recommend_scenic_box .recommend_scenic{
  width: 33.33%;
  display: inline-block;
  box-sizing: border-box;
  border-left: 1px solid rgba(255,255,255,0.27);
  font-size: 0;
}
.scenic_content .recommend_scenic_box .recommend_scenic:first-child{
  border-left: 0px;
}
.scenic_content .recommend_scenic_box .recommend_scenic_img{
  width: 100%;
  position: relative;
}
.scenic_content .recommend_scenic_box .recommend_scenic_bg{
  width: 100%;
  border-radius: 5px;
}
.scenic_content .recommend_scenic_box .recommend_scenic_icon{
  width: 40px;
  height: 40px;
  z-index: 50;
  margin-left: 50%;
  transform: translateX(-20px);
  margin-top: 15px;
}
.scenic_content .recommend_scenic_box .recommend_scenic_text{
  width: 100%;
  margin-top: 5px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  line-height: 16px;
  margin-bottom: 10px;
}

.video_box{
  width: 100%;
  display: none;
  position: fixed;
  top: 50%;
  left: 0;
}
.video_box .video{
  width: 100%;
}