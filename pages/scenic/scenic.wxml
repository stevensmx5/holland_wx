<view class='container'>
  <view class='page_bg'>
    <image src='../../images/scenic_bg.jpg' mode="widthFix"></image>
  </view>
  <view class='scenic_content'>
    <view class='scenic_type_box'>
      <view class='scenic_type'>展 馆</view>
      <image src='../../images/star.png'></image>
      <view class='name_ch'>荷兰国立博物馆</view>
      <view class='name_en'>Rijksmuseum</view>
    </view>
    <view class='quick_toolbar_box'>
      <view class='quick_toolbar'>
        <button class='quick_toolbar_btn'>交 通</button>
      </view>
      <view class='quick_toolbar'>
        <button class='quick_toolbar_btn'>门 票</button>
      </view>
      <view class='quick_toolbar'>
        <button class='quick_toolbar_btn'>地 图</button>
      </view>
    </view>
    <scroll-view scroll-x='true' class='recommend_scenic_box'>
      <block wx:for="{{recommend_scenic}}">
        <view class='recommend_scenic'>
          <view class='recommend_scenic_img' bindtap='guidance'>
            <image class='recommend_scenic_bg' mode='widthFix' src='{{item[0]}}'></image>
            <image class='recommend_scenic_icon' src='{{item[1]}}'></image>
          </view>
          <view class='recommend_scenic_text'>{{item[2]}}</view>
        </view>
      </block>
    </scroll-view>
  </view>
</view>