/* pages/postcard/postcard.wxss */
.container{
  padding-bottom: 60px;
}
.postcard_bg{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.postcard_bg image{
  width: 100%;
  display: block;
}
.postcard_form{
  width: 100%;
  float: left;
  z-index: 100;
}
.postcard_content{
  width: 100%;
  float: left;
  box-sizing: border-box;
  padding: 25px 20px;
  z-index: 500;
}
.postcard_content .postcard_box{
  width: 100%;
  float: left;
  background-color: rgba(255,255,255,0.2);
  position: relative;
}
.name_ch,
.name_en{
  width: 100%;
  color: #593d3d;
  position: absolute;
  box-sizing: border-box;
  padding-left: 10px;
  text-shadow: 0px 0px 2px #fff;
}
.name_ch{
  font-weight: bold;
  font-size: 14px;
  top: 10px;
}
.name_en{
  top: 28px;
  font-size: 12px
}
.postcard_info{
  width: 100%;
  float: left;
  background-color: #fff;
  margin-top: 65%;
  box-sizing: border-box;
  padding: 10px;
}
.photo{
  width: 55%;
  float: left;
  background-color: #d5d5d5;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-content: center;
}
.photo canvas{
  width: 100%;
  height: 100%;
}
.photo .photo_img{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index:1;
}
.photo .camear{
  width: 50px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 2;
}
.photo_text{
  width: 45%;
  float: left;
  box-sizing: border-box;
  padding:0 10px 0 20px;
}
.photo_text .date{
  width: 100%;
  float: left;
  text-align: center;
  font-size: 12px;
  line-height: 12px;
  color: #593d3d;
}
.photo_text textarea::after{
  padding: 0;
}
.photo_text textarea{
  width: 100%;
  height: 48px;
  margin-top: 27%;
  float: left;
  font-size: 12px;
  color: #593d3d;
  line-height: 16px;
  padding: 0;
  
}
.postmark{
  width: 100%;
  float: left;
  margin-top: 23%;
  position: relative;
}
.postmark .text{
  width: 100%;
  float: left;
  box-sizing: border-box;
  padding: 5px 10px;
  border-bottom: 1px solid #d9d9d9;
  font-size: 10px;
  color: #593d3d;
  line-height: 14px;
}
.postmark image{
  width: 37%;
  position: absolute;
  right: -3px;
  top:-5px;
}
.by_box{
  width: 100%;
  float: left;
  margin-top: 20%;
  border-bottom: 1px solid #d9d9d9;
}
.by_box .text{
  width: 35%;
  float: left;
  font-size: 12px;
  line-height: 20px;
  color: #593d3d;
  text-align: right;
}
.by_box input{
  width: 65%;
  height: 20px;
  float: left;
  box-sizing: border-box;
  color: #593d3d;
  padding:3px 0 3px 5px;
  font-size: 12px;
  line-height: 14px;
}
.third{
  margin-top: 20px;
}
.third,
.third image{
  width: 100%;
  float: left;
  z-index: 2;
}
.postcard_btn{
  width: 50%;
  float: left;
  margin-top: 20px;
  border: 1px solid #fff;
  border-radius: 5px;
  color: #fff;
  background-color: transparent;
  margin-left: 25%;
  font-size: 16px;
  line-height: 40px;
}
.bottom_tabbar{
  width: 100%;
  height: 60px;
  float: left;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #111113;
  z-index: 200;
  display: flex;
}
.bottom_tabbar .btn{
  flex: 1;
  text-align: center;
  color: #fff;
}
.bottom_tabbar .btn image{
  width: 30px;
  margin-top: 5px;
}
.bottom_tabbar .btn view{
  font-size: 10px;
  color: #6b6b6b;
  line-height: 16px;
}
.bottom_tabbar .btn .active{
  color: #fff;
}