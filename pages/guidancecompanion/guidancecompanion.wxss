/* pages/guidancecompanion/guidancecompanion.wxss */
page{
  background-color: #fff;
}
.companion_text{
  width: 100%;
  float: left;
  box-sizing: border-box;
  padding: 30px 20px 20px 20px;
}
.companion_text .topline,
.companion_text .bottomline{
  width: 70px;
  height: 1px;
  float: left;
  margin-left: 50%;
  transform: translateX(-35px);
  background-color: #c2c2c2;
}
.companion_text text{
  width: 100%;
  float: left;
  font-size: 14px;
  color: #020202;
  text-align: center;
  line-height: 24px;
  padding: 8px 0px;
}
.video_box{
  width: 100%;
  float: left;
}
.video_box .companion_img{
  width: 100%;
  float: left;
}
.video_box text{
  width: 100%;
  float: left;
  text-align: center;
  font-size: 16px;
  color: #020202;
  margin: 15px 0px;
  font-weight: bold;
}
.bottom_input{
  width: 100%;
  height: 50px;
  position: fixed;
  background-color: #f4f4f6;
  box-sizing: border-box;
  padding: 8px 30px;
  border-top: 1px solid #e1e1e1;
  bottom: 0;
}
.bottom_input input{
  width: 100%;
  height: 34px;
  border: 1px solid #e1e1e1;
  background-color: #fff;
  box-sizing: border-box;
  padding: 7px 10px;
  font-size: 14px;
  line-height: 20px;
  border-radius: 5px;
}