/* pages/user/user.wxss */
page{
  background-color: #000;
}
.userinfo{
  width: 100%;
  height: 100px;
  float: left;
  position: relative;
  background-color: #fa2a00;
  margin-bottom: 50px;
}
.userinfo .username{
  width: 100%;
  text-align: center;
  font-size: 18px;
  color: #fff;
  line-height: 26px;
  margin: 13px 0px;
}
.userinfo .useravatar{
  width: 90px;
  height: 90px;
  border: 3px solid #fff;
  border-radius: 50%;
  margin-left: 50%;
  transform: translateX(-45px);
}
.userinfo_content{
  width: 100%;
  float: left;
}
.userinfo_content .userinfo_text{
  box-sizing: border-box;
  width: 100%;
  float: left;
  padding: 0px 30px;
  margin-bottom: 30px;
}
.userinfo_content .userinfo_text view{
  width: 100%;
  float: left;
  font-size: 14px;
  line-height: 26px;
  color: #7c878e;
}
.my_record_box{
  width: 100%;
  float: left;
  box-sizing: border-box;
  padding: 0px 60px;
  position: relative;
}
.my_record_box .record_type{
  width: 50%;
  float: left;
  color: #fff;
  font-size: 14px;
  text-align: center;
  line-height: 30px;
}
.my_record_box .active{
  color: #fa2a00;
}
.my_record_box .bottom_line{
  width: 30px;
  height: 1px;
  float: left;
  background-color: #fa2a00;
  bottom: 0;
  transform: translateX(-15px);
  transition: all .5s ease;
}
.my_record_box .left{
  margin-left: 25%;
}
.my_record_box .right{
  margin-left: 75%;
}
.record_list{
  width: 100%;
  float: left;
  white-space:nowrap;
  padding: 25px 0px;
}
.record_list .record_list_img{
  width: 32%;
  display: inline-block;
  margin-right: 15px;
}
.record_list .record_list_img:first-child{
  margin-left: 30px;
}
.record_list .record_list_img image{
  width: 100%;
  border-radius: 8px;
  display: block;
}