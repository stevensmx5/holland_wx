/* pages/user/user.wxss */
page{
  background-color: #000;
}
.userinfo{
  width: 100%;
  height: 100px;
  float: left;
  position: relative;
  background-color: #fa2a00;
  margin-bottom: 100px;
}
.userinfo .username{
  width: 100%;
  min-height: 26px;
  text-align: center;
  font-size: 18px;
  color: #fff;
  line-height: 26px;
  margin: 13px 0px;
}
.userinfo .useravatar{
  width: 90px;
  height: 90px;
  border: 3px solid #fff;
  border-radius: 50%;
  margin-left: 50%;
  transform: translateX(-45px);
}
.userinfo_content{
  width: 100%;
  float: left;
}
.userinfo_content .userinfo_text{
  box-sizing: border-box;
  width: 100%;
  float: left;
  padding: 0px 30px;
  margin-bottom: 30px;
}
.userinfo_content .userinfo_text view{
  width: 100%;
  float: left;
  font-size: 14px;
  line-height: 26px;
  color: #7c878e;
}
.my_record_box{
  width: 100%;
  float: left;
  box-sizing: border-box;
  padding: 0px 30px;
  position: relative;
}
.my_record_box .record_type{
  width: 33.33%;
  float: left;
  color: #fff;
  font-size: 14px;
  text-align: center;
  line-height: 30px;
}
.my_record_box .active{
  color: #fa2a00;
}
.my_record_box .bottom_line{
  width: 30px;
  height: 1px;
  float: left;
  background-color: #fa2a00;
  bottom: 0;
  transform: translateX(-15px);
  transition: all .5s ease;
}
.my_record_box .left{
  margin-left: 16.66%;
}
.my_record_box .mid{
  margin-left: 49.99%;
}
.my_record_box .right{
  margin-left: 83.32%;
}
.record_list,
.record_list_dis{
  width: 100%;
  min-height: 200px;
  float: left;
  white-space:nowrap;
  padding: 25px 0px;
  display: block;
}
.record_list_dis{
  display: none;
}
.record_list .record_list_img,
.record_list_dis .record_list_img{
  width: 32%;
  display: inline-block;
  margin-right: 15px;
}
.record_list .record_list_img:first-child{
  margin-left: 30px;
}
.record_list .record_list_img image{
  width: 100%;
  border-radius: 8px;
  display: block;
}

.alert_box{
  width: 100%;
  height: 100%;
  float: left;
  position: fixed;
  background-color: rgba(0,0,0,0.6);
  z-index: 500;
}
.alert_div{
  width: 76%;
  position: fixed;
  box-sizing: border-box;
  padding: 25px 20px;
  background-color: #fff;
  left: 12%;
  top: 50%;
  transform: translateY(-50%);
}
.alert_text{
  width: 100%;
  float: left;
  font-size: 16px;
  color: #575757;
  font-weight: bold;
  box-sizing: border-box;
}
.alert_btn,
.close_btn{
  width: 45%;
  float: left;
  font-size: 16px;
  line-height: 34px;
  text-align: center;
  border-radius: 5px;
  margin-top: 20px;
}
.alert_btn{
  margin-left: 5%;
  background-color: #fa2a00;
  color: #fff;
}
.close_btn{
  margin-right: 5%;
  background-color: #ccc;
  color: #575757;
}
.hid{
  display: none;
}